doctype html
head
  title Sign Up
include ../partials/headerLoggedOut
form#NewRestForm(action = '/registeration' method = 'POST')
    h1 Sign Up!
    .field
        label(for='username') UserName:
        input#name(type='text' name='username' placeholder='Enter username')
        small
    .field
        label(for='password') Password:
        input#delFee(type='password' name='password' placeholder='************')
        small
    p #{ErrorMessage}
    button(type='submit') Sign Up!

